<div class = "main">
<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
	<p class = "notice"><%= flash[:notice] %></p>
<% end %>

<table class = index>
	<thead>
		<tr>
			<th>ID</th>
			<th>タイトル</th>
			<th>開始日</th>
			<th>終了日</th>
			<th>終日</th>
			<th>スケジュール更新日時</th>
			<th>確認</th>
			<th>編集</th>
			<th>削除</th>
		</tr>
	</thead>
	<tbody>
		<% @schedules.each do |schedule|%>
		<tr>
			<td><%= schedule.id %></td>
			<td><%= schedule.title %></td>
			<td>
				<% start = schedule.startday %>
				<%= start.strftime("%Y年%m月%d日") %>
			</td>
			<td>
				<% finish = schedule.finishday %>
				<%= finish.strftime("%Y年%m月%d日") %>
			</td>
			<td><% if schedule.allday == true %>
				 ◯
				<% else %>

				<% end %>
			</td>
			<td><%= schedule.updated_at.to_s(:datetime_jp) %></td>
			<td><%= link_to "確認", schedule, class:"line" %></td>
			<td><%= link_to "編集", [:edit,schedule] ,class:"line" %></td>
			<td><%= link_to "削除", schedule, method: :delete , data:{confirm: "本当に削除しますか？"},class:"line" %></td>
		</tr>
	</tbody>
	<% end %>
</table>
<div class = "list">
 <%= link_to "スケジュール新規登録", [:new_schedule] ,class:"line" %>
</div>
</div>

<div class = "main-footer">
 <%= render "shared/sum" %>
</div>